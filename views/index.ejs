<div class="author">
    <h1 class="author__heading">Hi, I am Uday</h1>
    <p class="author_body">Web Developer and Eater</p>
    <img src="/img/hero-image.webp" alt="Person looking at a window" width="981" height="528">

    <section class="article">
        <h2 class="articles__heading">Latest Posts</h2>
        <ul class="article-ul">
            <% data.forEach(post => { %>
                <li>
                    <a href="/post/<%= post._id %>">
                        <span><%= post.title %></span>
                        <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
                    </a>
                </li>
            <% }) %>
        </ul>
        <% if (nextPage !== null) { %>
            <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
        <% } %>
    </section>
</div>
